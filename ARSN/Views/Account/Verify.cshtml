@model ARSN.Models.ApplicationUser

@{
    ViewData["Title"] = "Verify";
}


<div class="row">
    <h2>Promjena</h2>

    <h4>Korisnički računi</h4>
    <hr />
    <div>
        <form asp-action="Verify">
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Verified" /> @Html.DisplayNameFor(model => model.Verified)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi promjene" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index">Povratak</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

