@model IEnumerable<ARSN.Models.Team>

@{
    ViewData["Title"] = "Index";
}

<h2>Početna stranica timova</h2>

<p>
    <a asp-action="Create">Stvori novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organisation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Organisation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrainerName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TeamID">Izmjena</a> |
                    <a asp-action="Details" asp-route-id="@item.TeamID">Detalji</a> |
                    <a asp-action="Delete" asp-route-id="@item.TeamID">Brisanje</a>
                </td>
            </tr>
        }
    </tbody>
</table>
