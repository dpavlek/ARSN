@model IEnumerable<ARSN.Models.Competition>

@{
    ViewData["Title"] = "Index";
}

<h2>Početna stranica natjecanja</h2>

<p>
    <a asp-action="Create">Novo natjecanje</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SportType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompetitionBegin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompetitionEnd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SportType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompetitionBegin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompetitionEnd)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CompetitionID">Izmjena</a> |
                    <a asp-controller="Rounds" asp-action="Index" asp-route-id="@item.CompetitionID">Detalji</a> |
                    <a asp-action="Delete" asp-route-id="@item.CompetitionID">Brisanje</a>
                </td>
            </tr>
        }
    </tbody>
</table>

 



