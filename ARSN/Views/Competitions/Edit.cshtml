@model ARSN.Models.Competition

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <h2>Izmjena</h2>

    <h4>Natjecanje</h4>
    <hr />

    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompetitionID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SportType" class="control-label"></label>
                <input asp-for="SportType" class="form-control" readonly/>
                <span asp-validation-for="SportType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompetitionBegin" class="control-label"></label>
                <input asp-for="CompetitionBegin" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="CompetitionEnd" class="control-label"></label>
                <input asp-for="CompetitionEnd" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div>
        <a asp-controller="Competitions" asp-action="Index">Povratak</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
