@model ARSN.Models.Game

@{
    ViewData["Title"] = "Edit";
}


@if (!@Model.Empty)
{
    <div class="row">
        <h2>Izmjena</h2>

        <h4>Utakmica</h4>
        <hr />
        <div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="GameID" />
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" readonly />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HomeResult" class="control-label"></label>
                    <input id="HomeResult" asp-for="HomeResult" class="form-control" />
                    <span asp-validation-for="HomeResult" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AwayResult" class="control-label"></label>
                    <input id="AwayResult" asp-for="AwayResult" class="form-control" />
                    <span asp-validation-for="AwayResult" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HomeTeam" class="control-label"></label>
                    <input asp-for="HomeTeam" value="@Model.HomeTeam.Name" class="form-control" readonly />
                    <span asp-validation-for="HomeTeam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AwayTeam" class="control-label"></label>
                    <input asp-for="AwayTeam" value="@Model.AwayTeam.Name" class="form-control" readonly />
                    <span asp-validation-for="AwayTeam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Spremi" class="btn btn-default" onclick="return CheckResult()"/>
                </div>
            </form>
        </div>
        <div>
            <a asp-controller="Rounds" asp-action="Index">Povratak</a>
        </div>
    </div>

    
}<div id="errorMessage" class="text-danger">

</div>

@if (@Model.Empty)
{
    <div class="row">
        <div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="GameID" />
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" readonly />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HomeTeam" class="control-label"></label>
                    <input asp-for="HomeTeam" value="@Model.HomeTeam.Name" class="form-control" readonly />
                    <span asp-validation-for="HomeTeam" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Spremi" class="btn btn-default" onclick="return CheckResults()" />
                </div>
            </form>
        </div>
        <div>
            <a asp-controller="Rounds" asp-action="Index">Povratak</a>
        </div>
    </div>

    
}


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
