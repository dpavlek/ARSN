@model ARSN.Models.Game

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <h2>Stvori novo</h2>

    <h4>Utakmica</h4>
    <hr />

    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeResult" class="control-label"></label>
                <input asp-for="HomeResult" class="form-control" />
                <span asp-validation-for="HomeResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayResult" class="control-label"></label>
                <input asp-for="AwayResult" class="form-control" />
                <span asp-validation-for="AwayResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Winner" class="control-label"></label>
                <input asp-for="Winner" class="form-control" />
                <span asp-validation-for="Winner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeam" class="control-label"></label>
                <div class="col-md-10">
                    <select asp-for="HomeTeam" class="form-control" asp-items="ViewBag.HomeTeam">
                        <option value="">--Select Home Team--</option>
                    </select>
                    <span asp-validation-for="HomeTeam" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeam" class="control-label"></label>
                <div class="col-md-10">
                    <select asp-for="AwayTeam" class="form-control" asp-items="ViewBag.AwayTeam">
                        <option value="">--Select Away Team--</option>
                    </select>
                    <span asp-validation-for="AwayTeam" class="text-danger" />
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Stvori" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index">Povratak</a>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
